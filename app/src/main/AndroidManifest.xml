<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================================
         STORAGE / FILE SYSTEM
         ============================================================ -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- ============================================================
         USAGE ACCESS
         ============================================================ -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>

    <!-- ============================================================
         SYSTEM / TASKS
         ============================================================ -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <!-- ============================================================
         NETWORK ACCESS
         ============================================================ -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- ============================================================
         BIOMETRICS
         ============================================================ -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>

    <!-- ============================================================
         SIM / MOBILE NETWORK
         ============================================================ -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions"/>

    <!-- ============================================================
         WIFI
         ============================================================ -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- ============================================================
         BLUETOOTH
         ============================================================ -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- ============================================================
         CAMERA
         ============================================================ -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <!-- ============================================================
         AUDIO / MICROPHONE
         ============================================================ -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- ============================================================
         VIBRATION
         ============================================================ -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- ============================================================
         APPLICATION
         ============================================================ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.GEL.DarkGold">

        <!-- ================= NEW OPTIMIZER ================= -->
        <activity
            android:name=".GuidedOptimizerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GEL.DarkGold" />

        <receiver
            android:name=".OptimizerReminderReceiver"
            android:exported="false" />

        <!-- ================= EXISTING ================= -->
        <activity
            android:name="com.gel.cleaner.iphone.AppleDeviceInfoInternalActivity"
            android:exported="false" />

        <activity
            android:name="com.gel.cleaner.iphone.AppleDeviceInfoPeripheralsActivity"
            android:exported="false" />

        <activity
            android:name=".IPhoneLabsActivity"
            android:exported="false"
            android:theme="@style/Theme.GEL.DarkGold" />

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- CORE ACTIVITIES -->
        <activity android:name=".AppListActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".CleanerActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".PermissionsActivity" android:exported="false"/>
        <activity android:name=".DeviceInfoInternalActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".DeviceInfoPeripheralsActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".CpuRamLiveActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".CoreMonitorActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".DiagnosisMenuActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".ManualTestsActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".PerformanceDiagnosticsActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".ServiceReportActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name=".AutoDiagnosisActivity" android:exported="false" android:screenOrientation="portrait"/>

        <!-- ============================================================
             MANUAL LABS 6â€“9 : DISPLAY & SENSORS
             ============================================================ -->
        <activity
            android:name=".TouchGridTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GEL.DarkGold"/>

        <activity
            android:name=".DisplayProTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GEL.DarkGold" />

        <activity
            android:name=".RotationCheckActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.GEL.DarkGold"/>

        <activity
            android:name=".ProximityCheckActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GEL.DarkGold"/>

        <!-- ACCESSIBILITY -->
        <service
            android:name=".GELAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/gel_accessibility_service"/>
        </service>

    </application>

</manifest>
